<section class='col-md-6 col-8 mx-auto pb-5'>
    <h2>Create A New Thought</h2>
  <form class='new-post-form form-control'>
    <div>
      <label for='post-title'>Title</label>
      <input type='text' id='post-title' class='form-control' name='post-title'/>
    </div>
    <div>
      <label for='post-body'>Body</label>
      <textarea id='post-body' class='form-control mb-3' name='post-body' rows='5' width='20%'></textarea>
    </div>
    <button type='submit' class='btn btn-success mb-1'>Create</button>
  </form>
</section>
{{#if posts.length}}
<section class='col-md-6 col-12 mx-auto my-5 text-center'>
  <h3>Your Thoughts</h3>
  <ul class='list-unstyled'>
    {{#each posts as |post|}}
    <li class='my-4'>
      {{> post-info post}}
    </li>
    <a href='/dashboard/edit/{{post.id}}' class='edit-link rounded-1 text-light bg-success p-2 my-5'>Edit Thought</a>
    {{/each}}
  </ul>
</section>
{{/if}}
</section>
<script src='/javascript/add-post.js'></script>