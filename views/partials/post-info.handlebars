<article class='post col-8 mx-auto bg-dark text-light rounded-1 my-2 p-3'>
    <div class="title">
        <h4>{{ title }}</h4>
    </div>
    <div class="meta">
        {{ user.username }}
        |
        {{format_date created_at}}
        |
        <a href='/post/{{id}}'>{{comments.length}} {{format_plural "comment" comments.length}}</a>
        <br />
        <p>{{ body }}</p>
    </div>
</article>