<div class='comments col-md-6 col-8 mx-auto my-3'>
    <h3 class='text-center'>Comments</h3>
    {{#each this}}
    <section class='comment bg-secondary text-light rounded-1 my-2 p-3'>
        <div class='meta'>
            <u>{{ user.username }}</u>
            |
            <u>{{ format_date created_at }}</u>
        </div>
        <div class='text bg-dark rounded-1 mt-1 p-2'>
            {{comment}}
        </div>
    </section>
    {{/each}}
</div>