<article class='col-8 mx-auto'>
    <h2>Edit Post</h2>
    <div>
        {{format_date post.created_at}}
        |
        <a href='/post/{{post.id}}'>{{post.comments.length}} {{format_plural 'comment' post.comments.length}}</a>
    </div>
    <form class='edit-post-form form-control p-3'>
        <div>
            <input name='post-title' class='form-control mb-3' type='text' value='{{post.title}}' />
        </div>
        <div>
            <input id='post-edit' class='form-control mb-3' type='text' value='{{post.body}}' />
        </div>
        <button type='submit' class='btn btn-success'>Save post</button>
        <button type='button' class='delete-post-btn btn btn-outline-success'>Delete post</button>
    </form>
</article>

{{> comments post.comments }}
<div class='text-center col-4 mx-auto my-5'>
    <form class='comment-form form-control'>
        <label for='comment-body' class='form-label fs-4'>Leave a comment</label>
        <div>
            <textarea class='comment-body form-control'></textarea>
        </div>
        <div id='invisidiv'>
            <input type='text' name='comment-owner' value='{{user_id}}' />
        </div>
        <div>
            <button type='submit' class='btn btn-success my-2'>add comment</button>
        </div>
    </form>
</div>
<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>
<script src='/javascript/comment.js'></script>