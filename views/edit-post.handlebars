<article>
    <a href='/dashboard'> &larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <div>
        {{format_date post.created_at}}
        |
        <a href='/post/{{post.id}}'>{{post.comments.length}} {{format_plural 'comment' post.comments.length}}</a>
    </div>
    <form class='edit-post-form'>
        <div>
            <input name='post-title' class='form-control mb-3' type='text' value='{{post.title}}' />
        </div>
        <div>
            <input id='post-edit' class='form-control mb-3' type='text' value='{{post.body}}' />
        </div>
        <button type='submit'>Save post</button>
        <button type='button' class='delete-post-btn'>Delete post</button>
    </form>
</article>
<form class='comment-form'>
    <div>
        <textarea class='comment-body'></textarea>
    </div>
    {{> comments post.comments }}
    <div>
        <button type='submit'>add comment</button>
    </div>
</form>
<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>
<script src='/javascript/comment.js'></script>